@model GestionGastos.Models.Ingreso
@{
    ViewData["Title"] = "Editar Ingreso";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary mb-3">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
            <h2 class="fw-bold">
                <i class="fas fa-edit me-2" style="color: #0d6efd;"></i>
                Editar Ingreso Existente
            </h2>
            <p class="text-muted">Actualiza los detalles de tu ingreso</p>
        </div>

        <div class="card border-0 shadow-lg">
            <div class="card-body p-4">
                <form asp-action="Editar" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="id_ingreso" />

                    <div class="mb-4">
                        <label asp-for="id_categoria" class="form-label fw-semibold">
                            <i class="fas fa-tag me-2 text-primary"></i>Categoría de Ingreso
                        </label>
                        <select asp-for="id_categoria" asp-items="Model.Categorias" class="form-select form-select-lg">
                            <option value="">-- Seleccione una categoría --</option>
                        </select>
                        <span asp-validation-for="id_categoria" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle me-1"></i>
                            Selecciona el tipo de ingreso (Salario, Freelance, Inversiones, etc.)
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="monto" class="form-label fw-semibold">
                            <i class="fas fa-dollar-sign me-2 text-primary"></i>Monto del Ingreso
                        </label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text" style="background: linear-gradient(135deg, #0d6efd 0%, #0c56d0 100%); color: white; border: none;">
                                <i class="fas fa-dollar-sign"></i>
                            </span>
                            <input asp-for="monto" type="number" step="0.01" class="form-control"
                                   placeholder="0.00" style="font-size: 1.5rem; font-weight: 600;" />
                        </div>
                        <span asp-validation-for="monto" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="descripcion" class="form-label fw-semibold">
                            <i class="fas fa-align-left me-2 text-info"></i>Descripción (Opcional)
                        </label>
                        <textarea asp-for="descripcion" class="form-control" rows="3"
                                  placeholder="Ej: Pago de nómina quincena 1, Proyecto freelance cliente X..."></textarea>
                        <span asp-validation-for="descripcion" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="fechaIngreso" class="form-label fw-semibold">
                            <i class="fas fa-calendar-alt me-2 text-warning"></i>Fecha de Ingreso
                        </label>
                        @{
                            // Se debe convertir a string en formato yyyy-MM-dd para el input date
                            string fechaFormato = Model.fechaIngreso.ToString("yyyy-MM-dd");
                        }
                        <input asp-for="fechaIngreso" value="@fechaFormato" type="date" class="form-control form-control-lg" />
                        <span asp-validation-for="fechaIngreso" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-lightbulb me-1"></i>
                            Fecha en que recibiste este ingreso
                        </small>
                    </div>

                    <div class="d-flex gap-3 justify-content-end mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-lg btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-lg"
                                style="background: linear-gradient(135deg, #0d6efd 0%, #0c56d0 100%); color: white; font-weight: 600;">
                            <i class="fas fa-redo me-2"></i>Actualizar Ingreso
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}