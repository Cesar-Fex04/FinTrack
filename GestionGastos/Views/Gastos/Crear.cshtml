@model GestionGastos.Models.GastoCreacionViewModel
@{
    ViewData["Title"] = "Registrar Gasto";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Header -->
        <div class="mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary mb-3">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
            <h2 class="fw-bold">
                <i class="fas fa-plus-circle me-2" style="color: #E74C3C;"></i>
                Registrar Nuevo Gasto
            </h2>
            <p class="text-muted">Registra tus salidas de dinero para un mejor control financiero</p>
        </div>

        <!-- Formulario -->
        <div class="card border-0 shadow-lg">
            <div class="card-body p-4">
                <form asp-action="Crear" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Categoría -->
                    <div class="mb-4">
                        <label asp-for="id_categoria" class="form-label fw-semibold">
                            <i class="fas fa-tag me-2 text-danger"></i>Categoría del Gasto
                        </label>
                        <select asp-for="id_categoria" asp-items="Model.Categorias" class="form-select form-select-lg">
                            <option value="">-- Seleccione una categoría --</option>
                        </select>
                        <span asp-validation-for="id_categoria" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-info-circle me-1"></i>
                            Selecciona el tipo de gasto (Comida, Transporte, Entretenimiento, etc.)
                        </small>
                    </div>

                    <!-- Monto -->
                    <div class="mb-4">
                        <label asp-for="Monto" class="form-label fw-semibold">
                            <i class="fas fa-dollar-sign me-2 text-danger"></i>Monto del Gasto
                        </label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text" style="background: linear-gradient(135deg, #E74C3C 0%, #c0392b 100%); color: white; border: none;">
                                <i class="fas fa-dollar-sign"></i>
                            </span>
                            <input asp-for="Monto" type="number" step="0.01" class="form-control"
                                   placeholder="0.00" style="font-size: 1.5rem; font-weight: 600;" />
                        </div>
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="mb-4">
                        <label asp-for="Descripcion" class="form-label fw-semibold">
                            <i class="fas fa-align-left me-2 text-primary"></i>Descripción
                        </label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"
                                  placeholder="Ej: Compra en supermercado, Gasolina, Comida..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <!-- Método de Pago -->
                    <div class="mb-4">
                        <label asp-for="MetodoPago" class="form-label fw-semibold">
                            <i class="fas fa-credit-card me-2 text-info"></i>Método de Pago
                        </label>
                        <select asp-for="MetodoPago" class="form-select form-select-lg">
                            <option value="">-- Seleccione un método --</option>
                            <option value="Efectivo">💵 Efectivo</option>
                            <option value="Débito">💳 Tarjeta de Débito</option>
                            <option value="Crédito">💳 Tarjeta de Crédito</option>
                            <option value="Transferencia">🏦 Transferencia</option>
                            <option value="Otro">📱 Otro</option>
                        </select>
                        <span asp-validation-for="MetodoPago" class="text-danger"></span>
                    </div>

                    <!-- Fecha -->
                    <div class="mb-4">
                        <label asp-for="fechaGasto" class="form-label fw-semibold">
                            <i class="fas fa-calendar-alt me-2 text-warning"></i>Fecha del Gasto
                        </label>
                        <input asp-for="fechaGasto" type="date" class="form-control form-control-lg" />
                        <span asp-validation-for="fechaGasto" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="fas fa-lightbulb me-1"></i>
                            Fecha en que realizaste este gasto
                        </small>
                    </div>

                    <!-- Tips de Gastos -->
                    <div class="card border-0 mb-4" style="background: linear-gradient(135deg, rgba(231, 76, 60, 0.1) 0%, rgba(192, 57, 43, 0.1) 100%);">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">
                                <i class="fas fa-lightbulb me-2" style="color: #E74C3C;"></i>
                                Consejos para categorizar gastos
                            </h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="small mb-0">
                                        <li>🍔 Comida y Bebidas</li>
                                        <li>🚗 Transporte y Gasolina</li>
                                        <li>🏠 Hogar y Servicios</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="small mb-0">
                                        <li>🎬 Entretenimiento</li>
                                        <li>👕 Ropa y Accesorios</li>
                                        <li>💊 Salud y Farmacia</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex gap-3 justify-content-end mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-lg btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-lg"
                                style="background: linear-gradient(135deg, #E74C3C 0%, #c0392b 100%); color: white; font-weight: 600;">
                            <i class="fas fa-save me-2"></i>Registrar Gasto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}