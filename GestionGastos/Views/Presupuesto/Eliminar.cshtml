@model GestionGastos.Models.Presupuesto
@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <!-- Header -->
        <div class="mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary mb-3">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
            <h2 class="fw-bold text-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Eliminar Presupuesto
            </h2>
            <p class="text-muted">¿Estás seguro de que deseas eliminar este presupuesto?</p>
        </div>

        <!-- Card de confirmación -->
        <div class="card border-0 shadow-lg">
            <div class="card-body p-4">
                <!-- Alerta de advertencia -->
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>¡Atención!</strong> Esta acción no se puede deshacer.
                </div>

                <!-- Información del presupuesto -->
                <div class="text-center mb-4 p-4 bg-light rounded">
                    <div class="rounded-circle mx-auto shadow mb-3"
                         style="width: 100px; height: 100px; background: linear-gradient(135deg, #93BFC7 0%, #6b9fa8 100%); display: inline-flex; align-items: center; justify-content: center;">
                        <i class="fas fa-calculator fa-3x text-white"></i>
                    </div>

                    <h2 class="fw-bold mb-2" style="color: #93BFC7;">
                        @Model.montoLimite.ToString("C")
                    </h2>

                    <h5 class="fw-bold mb-2">@Model.NombreCategoria</h5>

                    <span class="badge" style="background-color: #93BFC7; font-size: 0.9rem;">
                        <i class="fas fa-calendar-alt me-1"></i>
                        @Model.NombreMes @Model.anio
                    </span>
                </div>

                <!-- Detalles -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-3">Detalles del presupuesto:</h6>
                    <table class="table table-sm table-borderless">
                        <tbody>
                            <tr>
                                <td class="text-muted" style="width: 40%;">
                                    <i class="fas fa-tag me-2"></i>Categoría:
                                </td>
                                <td class="fw-semibold">@Model.NombreCategoria</td>
                            </tr>
                            <tr>
                                <td class="text-muted">
                                    <i class="fas fa-calendar me-2"></i>Período:
                                </td>
                                <td class="fw-semibold">@Model.NombreMes @Model.anio</td>
                            </tr>
                            <tr>
                                <td class="text-muted">
                                    <i class="fas fa-dollar-sign me-2"></i>Monto Límite:
                                </td>
                                <td class="fw-semibold" style="color: #93BFC7;">@Model.montoLimite.ToString("C")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Nota informativa -->
                <div class="alert alert-info border-0" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    Al eliminar este presupuesto, perderás el seguimiento del límite de gastos
                    para <strong>@Model.NombreCategoria</strong> en <strong>@Model.NombreMes @Model.anio</strong>.
                </div>

                <!-- Formulario de confirmación -->
                <form asp-action="Eliminar" method="post">
                    <input type="hidden" asp-for="id_presupuesto" />

                    <div class="d-flex gap-3 justify-content-end mt-4 pt-3 border-top">
                        <a asp-action="Index" class="btn btn-lg btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-lg btn-danger"
                                onclick="return confirm('¿Estás completamente seguro de eliminar este presupuesto?');">
                            <i class="fas fa-trash me-2"></i>Sí, Eliminar Presupuesto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>