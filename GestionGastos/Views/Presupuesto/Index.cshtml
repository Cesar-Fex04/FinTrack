@model IEnumerable<GestionGastos.Models.Presupuesto>
@{
    ViewData["Title"] = "Mis Presupuestos";
}

<!-- Mensajes -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1 fw-bold">
            <i class="fas fa-calculator me-2" style="color: #93BFC7;"></i>
            Mis Presupuestos
        </h2>
        <p class="text-muted mb-0">Administra los límites de gastos por categoría</p>
    </div>
    <div>
        <a asp-action="Dashboard" class="btn btn-outline-primary me-2">
            <i class="fas fa-chart-bar me-2"></i>Dashboard
        </a>
        <a asp-action="Crear" class="btn btn-lg shadow-sm"
           style="background: linear-gradient(135deg, #93BFC7 0%, #6b9fa8 100%); color: white; font-weight: 600;">
            <i class="fas fa-plus me-2"></i>Nuevo Presupuesto
        </a>
    </div>
</div>

<!-- Estadísticas -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(147, 191, 199, 0.2);">
                        <i class="fas fa-list fa-2x" style="color: #93BFC7;"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">@Model.Count()</h5>
                        <small class="text-muted">Total de Presupuestos</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(74, 222, 128, 0.2);">
                        <i class="fas fa-dollar-sign fa-2x" style="color: #4ade80;"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">@Model.Sum(p => p.montoLimite).ToString("C")</h5>
                        <small class="text-muted">Presupuesto Total</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(212, 175, 55, 0.2);">
                        <i class="fas fa-calendar fa-2x" style="color: #D4AF37;"></i>
                    </div>
                    <div>
                        @{
                            var mesActual = DateTime.Now.Month;
                            var anioActual = DateTime.Now.Year;
                            var presupuestosMesActual = Model.Count(p => p.mes == mesActual && p.anio == anioActual);
                        }
                        <h5 class="mb-0 fw-bold">@presupuestosMesActual</h5>
                        <small class="text-muted">Este Mes</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de Presupuestos -->
@if (Model != null && Model.Any())
{
    <div class="card border-0 shadow-lg">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background: linear-gradient(135deg, #93BFC7 0%, #6b9fa8 100%); color: white;">
                        <tr>
                            <th class="px-4 py-3">Categoría</th>
                            <th class="px-4 py-3">Período</th>
                            <th class="px-4 py-3 text-end">Monto Límite</th>
                            <th class="px-4 py-3 text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle me-3"
                                             style="width: 40px; height: 40px; background: linear-gradient(135deg, #ABE7B2 0%, #93BFC7 100%); display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-tag text-white"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.NombreCategoria</div>
                                            <small class="text-muted">ID: @item.id_presupuesto</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <span class="badge" style="background-color: #93BFC7; font-size: 0.875rem; padding: 0.5rem 0.75rem;">
                                        <i class="fas fa-calendar-alt me-1"></i>
                                        @item.NombreMes @item.anio
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-end">
                                    <span class="fw-bold fs-5" style="color: #1e293b;">
                                        @item.montoLimite.ToString("C")
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Editar" asp-route-id="@item.id_presupuesto"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@item.id_presupuesto"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calculator fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">No hay presupuestos registrados</h4>
        <p class="text-muted mb-4">Comienza definiendo límites para tus categorías de gastos</p>
        <a asp-action="Crear" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Crear Primer Presupuesto
        </a>
    </div>
}