@model GestionGastos.Models.Presupuesto
@{
    ViewData["Title"] = "Editar Presupuesto";
}

<h2 class="mb-1 fw-bold">
    <i class="fas fa-edit me-2" style="color: #93BFC7;"></i>
    Editar Presupuesto
</h2>
<p class="text-muted mb-4">
    Modifica el registro para <strong>@Model.NombreCategoria</strong> (@Model.NombreMes @Model.anio)
</p>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8 col-lg-6">

                <form asp-action="Editar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="id_presupuesto" />
                    <input type="hidden" asp-for="id_usuario" />

                    <div class="mb-3">
                        <label asp-for="id_categoria" class="form-label fw-semibold"></label>
                        <select asp-for="id_categoria" class="form-select" asp-items="Model.Categorias">
                            <option value="">-- Seleccione una Categoría --</option>
                        </select>
                        <span asp-validation-for="id_categoria" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="montoLimite" class="form-label fw-semibold"></label>
                        <input asp-for="montoLimite" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="montoLimite" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="mes" class="form-label fw-semibold"></label>
                        <input asp-for="mes" class="form-control" type="number" min="1" max="12" />
                        <span asp-validation-for="mes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="anio" class="form-label fw-semibold"></label>
                        <input asp-for="anio" class="form-control" type="number" min="2020" max="2030" />
                        <span asp-validation-for="anio" class="text-danger"></span>
                    </div>

                    <div class="d-flex flex-wrap gap-2 mt-4">

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i> Guardar Cambios
                        </button>

                        <form asp-action="Eliminar" method="post" class="d-inline">
                            <input type="hidden" asp-for="id_presupuesto" />
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('¿Está seguro de que desea eliminar este presupuesto?');">
                                <i class="fas fa-trash me-2"></i> Eliminar
                            </button>
                        </form>

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-ban me-2"></i> Cancelar
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // Habilita la validación del lado del cliente
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}