@model IEnumerable<GestionGastos.Models.ReporteMensualViewModel>

@{
    ViewData["Title"] = "Reporte Mensual";
    int mesSel = ViewBag.MesSeleccionado;
    int anioSel = ViewBag.AnioSeleccionado;
}

<div class="card">
    <div class="card-body">

        <h3 class="card-title">Reporte Mensual</h3>

        <form method="get" class="row g-3 mb-4">

            <!-- SELECT DE MESES -->
            <div class="col-md-4">
                <label class="form-label">Mes</label>
                <select name="mes" class="form-select">
                    @for (int m = 1; m <= 12; m++)
                    {
                        var nombreMes = System.Globalization.CultureInfo
                        .GetCultureInfo("es-ES")
                        .DateTimeFormat.GetMonthName(m);

                        <option value="@m" selected="@(mesSel == m)">
                            @nombreMes
                        </option>
                    }
                </select>
            </div>

            <!-- SELECT DE AÑOS -->
            <div class="col-md-4">
                <label class="form-label">Año</label>
                <select name="anio" class="form-select">
                    @for (int a = DateTime.Now.Year - 5; a <= DateTime.Now.Year + 1; a++)
                    {
                        <option value="@a" selected="@(anioSel == a)">
                            @a
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary w-100">Consultar</button>
            </div>

        </form>

        <!-- TABLA DEL REPORTE -->
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Categoría</th>
                        <th>Presupuesto</th>
                        <th>Gastado</th>
                        <th>Diferencia</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var clase = item.Diferencia < 0 ? "text-danger" : "text-success";

                        <tr>
                            <td>@item.Categoria</td>
                            <td>$ @item.Presupuesto.ToString("N2")</td>
                            <td>$ @item.Gasto.ToString("N2")</td>
                            <td class="@clase">$ @item.Diferencia.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
