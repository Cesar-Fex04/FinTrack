@model IEnumerable<GestionGastos.Models.Categoria>
@{
    ViewData["Title"] = "Gestión de Categorías";
}

<!-- Mensajes de éxito/error -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1 fw-bold">
            <i class="fas fa-tags me-2" style="color: #ABE7B2;"></i>
            Gestión de Categorías
        </h2>
        <p class="text-muted mb-0">Administra las categorías de tus gastos e ingresos</p>
    </div>
    <a asp-action="Crear" class="btn btn-lg shadow-sm"
       style="background: linear-gradient(135deg, #ABE7B2 0%, #93BFC7 100%); color: white; font-weight: 600;">
        <i class="fas fa-plus me-2"></i>Nueva Categoría
    </a>
</div>

<!-- Estadísticas rápidas -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(171, 231, 178, 0.2);">
                        <i class="fas fa-layer-group fa-2x" style="color: #ABE7B2;"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">@Model.Count()</h5>
                        <small class="text-muted">Total de Categorías</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(255, 120, 73, 0.2);">
                        <i class="fas fa-arrow-down fa-2x" style="color: #ff7849;"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">@Model.Count(c => c.tipo == "Gasto")</h5>
                        <small class="text-muted">Categorías de Gastos</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background: rgba(74, 222, 128, 0.2);">
                        <i class="fas fa-arrow-up fa-2x" style="color: #4ade80;"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">@Model.Count(c => c.tipo == "Ingreso")</h5>
                        <small class="text-muted">Categorías de Ingresos</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filtros y búsqueda -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary active" data-filter="all">
                        <i class="fas fa-list me-2"></i>Todas
                    </button>
                    <button type="button" class="btn btn-outline-danger" data-filter="Gasto">
                        <i class="fas fa-minus-circle me-2"></i>Gastos
                    </button>
                    <button type="button" class="btn btn-outline-success" data-filter="Ingreso">
                        <i class="fas fa-plus-circle me-2"></i>Ingresos
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" id="searchInput"
                           placeholder="Buscar categoría...">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Grid de Categorías -->
@if (Model != null && Model.Any())
{
    <div class="row" id="categoriasGrid">
        @foreach (var categoria in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4 categoria-card" data-tipo="@categoria.tipo">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body text-center p-4">
                        <!-- Imagen de la categoría -->
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(categoria.imagen_url))
                            {
                                <img src="@categoria.imagen_url" alt="@categoria.nombre"
                                     class="rounded-circle shadow-sm"
                                     style="width: 80px; height: 80px; object-fit: cover; border: 3px solid #ABE7B2;"
                                     onerror="this.src='/images/categorias/default.png'">
                            }
                            else
                            {
                                <div class="rounded-circle mx-auto shadow-sm d-flex align-items-center justify-content-center"
                                     style="width: 80px; height: 80px; background: linear-gradient(135deg, #ABE7B2 0%, #93BFC7 100%);">
                                    <i class="fas fa-tag fa-2x text-white"></i>
                                </div>
                            }
                        </div>

                        <!-- Nombre -->
                        <h5 class="fw-bold mb-2">@categoria.nombre</h5>

                        <!-- Badge de tipo -->
                        @if (categoria.tipo == "Gasto")
                        {
                            <span class="badge mb-2" style="background-color: #ff7849;">
                                <i class="fas fa-minus-circle me-1"></i>Gasto
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success mb-2">
                                <i class="fas fa-plus-circle me-1"></i>Ingreso
                            </span>
                        }

                        <!-- Descripción -->
                        @if (!string.IsNullOrEmpty(categoria.descripcion))
                        {
                            <p class="text-muted small mb-3">@categoria.descripcion</p>
                        }
                        else
                        {
                            <p class="text-muted small mb-3 fst-italic">Sin descripción</p>
                        }

                        <!-- Botones de acción -->
                        <div class="d-flex gap-2 justify-content-center">
                            <a asp-action="Editar" asp-route-id="@categoria.id_categoria"
                               class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Eliminar" asp-route-id="@categoria.id_categoria"
                               class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">No hay categorías registradas</h4>
        <p class="text-muted mb-4">Comienza creando tu primera categoría</p>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Crear Categoría
        </a>
    </div>
}

<style>
    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
</style>

@section Scripts {
    <script>
        // Filtrado por tipo
        document.querySelectorAll('[data-filter]').forEach(btn => {
            btn.addEventListener('click', function() {
                // Actualizar botones activos
                document.querySelectorAll('[data-filter]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                const filter = this.dataset.filter;
                const cards = document.querySelectorAll('.categoria-card');

                cards.forEach(card => {
                    if (filter === 'all' || card.dataset.tipo === filter) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Búsqueda
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const cards = document.querySelectorAll('.categoria-card');

            cards.forEach(card => {
                const cardText = card.textContent.toLowerCase();
                if (cardText.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
}