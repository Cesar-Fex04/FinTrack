<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionGastos.styles.css" asp-append-version="true" />
    <!-- Font Awesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="d-flex align-items-center">
                <i class="fas fa-wallet sidebar-logo-icon"></i>
                <h4 class="sidebar-title mb-0">FinTrack</h4>
            </div>
            <button class="sidebar-toggle" id="sidebarClose">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="sidebar-menu">
            <a asp-controller="Home" asp-action="Index" class="sidebar-item">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
            </a>

            <a asp-controller="Gastos" asp-action="Crear" class="sidebar-item">
                <i class="fas fa-minus-circle"></i>
                <span>Registrar Gasto</span>
            </a>

            <a asp-controller="Home" asp-action="ReporteMensual" class="sidebar-item">
                <i class="fas fa-chart-line"></i>
                <span>Reporte Mensual</span>
            </a>

          
            <a asp-controller="Categorias" asp-action="Index" class="sidebar-item">
                <i class="fas fa-tags"></i>
                <span>Categorías</span>
            </a>
            
            <a asp-controller="Presupuesto" asp-action="Index" class="sidebar-item">
                <i class="fas fa-calculator"></i>
                <span>Verificar Presupuesto</span>
            </a>

            <a asp-controller="Ingresos" asp-action="Index" class="sidebar-item">
                <i class="fas fa-coins"></i>
                <span>Ingresos</span>
            </a>

            <!-- Después de Presupuestos, agrega: -->
            <div class="sidebar-divider"></div>

            <div class="sidebar-section-title">
                <i class="fas fa-chart-line"></i>
                <span>Análisis</span>
            </div>

            <a asp-controller="Home" asp-action="Analisis" class="sidebar-item">
                <i class="fas fa-chart-line"></i>
                <span>Análisis Financiero</span>
            </a>
            <div class="sidebar-divider"></div>

            <div class="sidebar-section-title">
                <i class="fas fa-cog"></i>
                <span>Configuración</span>
            </div>

            <a href="#" class="sidebar-item">
                <i class="fas fa-tags"></i>
                <span>Categorías</span>
            </a>

            <a href="#" class="sidebar-item">
                <i class="fas fa-coins"></i>
                <span>Ingresos</span>
            </a>

            <a href="#" class="sidebar-item">
                <i class="fas fa-bullseye"></i>
                <span>Metas Financieras</span>
            </a>
        </div>

        <div class="sidebar-footer">
            <div class="sidebar-user">
                <div class="sidebar-user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="sidebar-user-info">
                    <div class="sidebar-user-name">Usuario Demo</div>
                    <div class="sidebar-user-email">demo@fintrack.com</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overlay para cerrar sidebar en móvil -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Contenido Principal -->
    <div class="main-content" id="mainContent">
        <!-- Top Navbar -->
        <nav class="top-navbar">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <div class="top-navbar-title">
                @ViewData["Title"]
            </div>

            <div class="top-navbar-actions">
                <button class="top-navbar-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <button class="top-navbar-btn">
                    <i class="fas fa-user-circle"></i>
                </button>
            </div>
        </nav>

        <!-- Contenido de la página -->
        <div class="content-wrapper">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <span>&copy; 2025 FinTrack - Tu control financiero personal</span>
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacidad</a>
                        <span class="mx-2">|</span>
                        <a href="#" class="footer-link">Soporte</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script del Sidebar -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebarClose = document.getElementById('sidebarClose');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            const mainContent = document.getElementById('mainContent');

            // Función para abrir sidebar
            function openSidebar() {
                sidebar.classList.add('active');
                sidebarOverlay.classList.add('active');
                document.body.style.overflow = 'hidden';
            }

            // Función para cerrar sidebar
            function closeSidebar() {
                sidebar.classList.remove('active');
                sidebarOverlay.classList.remove('active');
                document.body.style.overflow = '';
            }

            // Toggle sidebar
            sidebarToggle.addEventListener('click', openSidebar);
            sidebarClose.addEventListener('click', closeSidebar);
            sidebarOverlay.addEventListener('click', closeSidebar);

            // Marcar item activo
            const currentPath = window.location.pathname;
            const sidebarItems = document.querySelectorAll('.sidebar-item');

            sidebarItems.forEach(item => {
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>